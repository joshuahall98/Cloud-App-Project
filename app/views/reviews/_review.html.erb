<p><%= review.rating %></p>
<p><%= review.comment %></p>

<% if user_signed_in? %>

    <% if review.user_id == current_user.id %>

        <%= link_to "Edit", edit_game_review_path(review.game, review) %>
        <%= link_to "Delete", game_review_path(review.game, review), method: :delete, data: {confirm: "Are you sure?"} %>

    <% end %>
<% end %>
